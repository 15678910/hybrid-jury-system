rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // 블로그 이미지는 누구나 읽을 수 있음 (SNS 크롤러 접근 필요)
    match /blog-images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null || true;
    }

    // 기타 파일은 인증된 사용자만
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
